{
  "name": "party-puzzle-palooza",
  "version": "0.0.0",
  "private": true,
  "description": "A monorepo for Party Puzzle Palooza with Turbo and pnpm workspaces",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,md}\"",
    "prepare": "husky install",
    "db:migrate": "cd packages/database && pnpm migration:run",
    "db:generate": "cd packages/database && pnpm migration:generate",
    "db:revert": "cd packages/database && pnpm migration:revert",
    "db:setup": "./scripts/setup-database.sh",
    "db:seed": "cd packages/database && pnpm seed",
    "db:seed:cli": "cd packages/database && pnpm seed:cli",
    "db:seed:demo": "./scripts/seed-demo.sh",
    "monitoring:setup": "./scripts/setup-monitoring.sh",
    "monitoring:start": "docker-compose -f docker-compose.prod.yml --profile monitoring up -d",
    "monitoring:stop": "docker-compose -f docker-compose.prod.yml --profile monitoring down",
    "dev:start": "docker-compose -f docker-compose.dev.yml up -d",
    "dev:stop": "docker-compose -f docker-compose.dev.yml down",
    "prod:start": "docker-compose -f docker-compose.prod.yml up -d",
    "prod:stop": "docker-compose -f docker-compose.prod.yml down",
    "load:test": "./scripts/run-load-test.sh",
    "load:analyze": "python3 scripts/analyze-load-test.py",
    "e2e:test": "node scripts/e2e-test.js",
    "e2e:playwright": "playwright test",
    "e2e:install": "playwright install",
    "e2e:report": "playwright show-report",
    "e2e:docker": "./scripts/run-e2e-docker.sh",
    "e2e:test": "node scripts/e2e-test.js",
    "e2e:playwright": "playwright test",
    "e2e:install": "playwright install",
    "e2e:report": "playwright show-report"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.0",
    "turbo": "^1.11.3",
    "typescript": "^5.3.2"
  },
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{md,json}": [
      "prettier --write"
    ]
  }
}
